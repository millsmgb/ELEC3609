<html>
    <head>
        <head>
        <meta charset="UTF-8">              
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Node Authentication</title>
        
        <link href="../css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
        <link href="../css/borderless.css" rel="stylesheet" type="text/css"/>
    </head>
    </head>
    <body>
        <div class="site-wrapper">
            <div class="container">
                
                <!-- Navigation Bar container -->
                <div class="navbar navbar-inverse" style="background-color: #419641">
                    <a class="navbar-brand">Timetable Sharing</a>
                    <div class="navbar-collapse collapse navbar-responsive-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/">Home</a></li>
                            <li><a href="/login">Log In</a></li>
                        </ul>
                    </div>
                </div>
                
                <!-- Log in box container -->
                <div id="regi-box">
                    
                       
 <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>
            </div>
        </div>
        
        <!-- Core javaScript files -->
    </body>
    
    <style>
        body {
            background-color: #225223;
        }
        #regi-box {
            background-color: white;
            border-radius: 6px;
            padding: 48px 90px;
            margin: 100px 150px;
        }
        #reg-buttons {
            float: right;
            position: relative;
            left: -30%;
        }
    </style>
</html>