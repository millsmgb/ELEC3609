<html>
    <head>
        <head>
        <meta charset="UTF-8">              
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Node Authentication</title>
        
        <link href="../css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
        <link href="../css/borderless.css" rel="stylesheet" type="text/css"/>
    </head>
    </head>
    <body>
    <div class="site-wrapper">
        <div class="container">

            <!-- Navigation Bar container -->
            <div class="navbar navbar-inverse" style="background-color: #419641">
                <a class="navbar-brand">Timetable Sharing</a>
                <div class="navbar-collapse collapse navbar-responsive-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/">Home</a></li>
                        <li><a href="login">Log In <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span></a></li>
                        <li><a href="signup"><span class="glyphicon glyphicon-registration-mark" aria-hidden="true"></span> Sign up</a></li>
                    </ul>
                </div>
            </div>
            
            <!-- Sign Up box container -->
            <div id="regi-box">
                <h1><span class="fa fa-sign-in"></span> Signup</h1>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/signup" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email" placeholder="email@HostName">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <br>
                    <h3>Optional Information</h3>
                    <div class="form-group">
                        <label>Your Name</label>
                        <input type="text" class="form-control" name="name" placeholder="First Name + Surname">
                    </div>
                    <div class="form-group">
                        <label>Univeristy</label>
                        <input type="text" class="form-control" name="name" placeholder="Current University">
                    </div>
                    <div class="form-group">
                        <label>Degree</label>
                        <input type="text" class="form-control" name="name" placeholder="Current Degree">
                    </div>
                    <hr>
                    <div class="span7 text-center">
                    <div class="btn-group">
                        <a href="/" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-primary">Signup</button>
                    </div></div>
                    <br>
                    <div class="span7 text-center"><a href="retrieve" class="btn btn-info">Forgot your Information?</a></div>
                    </form>  
            </div>
        </div>
    </div>

    </body>
    
    <style>
        body {
            background-color: #225223;
        }
        #regi-box {
            background-color: white;
            border-radius: 6px;
            padding: 48px 90px;
            margin: 100px 150px;
        }
    </style>
</html>