<html>
    <head>
        <head>
        <meta charset="UTF-8">              
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>TimetableSharing Log-In</title>
        
        <link href="../css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
        <link href="../css/borderless.css" rel="stylesheet" type="text/css"/>
    </head>
    </head>
    <body>
        <div class="site-wrapper">
            <div class="container">
                
                <!-- Navigation Bar container -->
                <div class="navbar navbar-inverse" style="background-color: #419641">
                    <a class="navbar-brand">Timetable Sharing</a>
                    <div class="navbar-collapse collapse navbar-responsive-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/">Home</a></li>
                            <li><a href="/signup">Sign up</a></li>
                        </ul>
                    </div>
                </div>
                
                <!-- Register box container -->
                <div id="login-box">
                    <h1><span class="fa fa-sign-in"></span> Login</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>


    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </form>


    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>
    
                </div>
            </div>
        </div>
        
        <!-- Core javaScript files -->
        <script src="../js/jquery.min.js" type="text/javascript"></script>
        <script src="../js/bootstrap.js" type="text/javascript"></script>
    </body>
    
    <style>
        body {
            background-color: #225223;
        }
        #login-box {
            background-color: white;
            border-radius: 6px;
            padding: 48px 90px;
            margin: 100px 150px;
        }
        #centre-img{
            display: block;
            margin: auto;
            margin-bottom: 20px;
        }
        #log-buttons {
            float: right;
            position: relative;
            left: -22%;
        }
    </style>
</html>
